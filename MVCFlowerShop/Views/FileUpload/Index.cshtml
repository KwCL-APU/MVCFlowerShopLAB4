
@{
    ViewData["Title"] = "Upload File Page";
}

<center>
    <h1>@ViewData["Title"]</h1>
    <br />

    <div class="row">
        <section>
            <!--method = always going how you send the object-->
            <!--ectype = mention what kind of object you send-->
            <!--asp-controller = which controller action you want to proceed the action-->
            <!--asp-action = which destination page you want to go-->
            <form method="post" enctype="multipart/form-data" asp-controller="UploadFiles" asp-action="Index">

                <div class="form-group">
                    <div class="col-md-10">
                        <p>
                            Upload One or more files using this form
                        </p>
                        <!--Add a browser file button-->
                        <input type="file" name="files" multiple />
                    </div>
                </div>
                <div class="form-group">
                    <div class="col-md-10">
                        <input type="submit" name="upload" value="Upload File Now!" />
                    </div>

                </div>

</form>

        </section>
    </div>


</center>
